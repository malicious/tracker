{% set task_edit_css %}
.task-edit div {
  padding-top: 0.25em;
  padding-bottom: 0.25em;
  overflow-x: hidden;
}
.task-edit label {
  display: inline-block;
  text-align: right;
  width: 9em;
}
.task-edit textarea {
  vertical-align: top;
  line-height: 1.2;
}
.task-edit input, .task-edit textarea {
  background-color: var(--tab-selected-bg-color);
}
.task-edit input:disabled {
  border: 0;
}
.task-edit input:enabled:hover, .task-edit textarea:hover {
  background-color: rgb(255, 255, 255);
  outline: 5px auto -webkit-focus-ring-color;
  outline-offset: -2px;
}
.task-edit button:hover {
  text-shadow:
    0 0  5px rgba(0,0,0,1.0),
    0 0 12px rgba(0,0,0,0.8),
    0 0 20px rgba(0,0,0,0.4);
}
.linkage-block {
  border: 1px solid rgba(29,28,29,.13);
  border-radius: 6px;
  margin: 0.5em;

  /* TODO: this could be a responsive table, with multi-line rows */
  display: grid;
  grid-template-columns: min-content repeat(2, 7em) min-content auto;
}
.linkage-header-row > div, .linkage-footer-row {
  /* TODO: this has to be a responsive table */
  disabled-max-height: 4ex;
  disabled-overflow-y: hidden;
}
.linkage-row, .linkage-header-row, .linkage-footer-row {
  display: contents;
  grid-column: 1 / 5;
}
{% endset %}{# task_edit_css #}



{% set task_edit_js %}
