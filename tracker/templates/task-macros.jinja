{% macro linkage_row(tl) %}
<div class="linkage-row">
  <div>
    <input name="tl-{{tl.time_scope_id}}-time_scope_id" value="{{tl.time_scope_id}}" readonly="readonly">
    <input name="tl-{{tl.time_scope_id}}-created_at" value="{{tl.created_at if tl.created_at}}" readonly="readonly">
  </div>
  <div>
    <input name="tl-{{tl.time_scope_id}}-time_elapsed" placeholder="None" value="{{tl.time_elapsed if tl.time_elapsed}}">
  </div>
  <div>
    <input name="tl-{{tl.time_scope_id}}-resolution"   placeholder="None" value="{{tl.resolution | escape if tl.resolution}}">
  </div>
  <div>
    <textarea name="tl-{{tl.time_scope_id}}-detailed_resolution" placeholder="None">{{tl.detailed_resolution if tl.detailed_resolution}}</textarea>
  </div>
  <div>
    <button>存</button> {# TODO: update the "formaction" field here, so it's linkage-only #}
    <button class="delete" disabled>x</button>
  </div>
</div>
{% endmacro %}



{% macro edit_block(t, backlink) %}
<form action="{{url_for("tasks-v2-rest.edit_task", task_id=t.task_id)}}" method="post">
<input type="hidden" name="backlink" value="{{backlink}}">

<div class="task-edit-task-only">
  <div>
    <label>task_id</label>
    <span>{{t.task_id}}</span>
    <a href="{{url_for("tasks-v2.edit_one_task", task_id=t.task_id)}}">[edit task]</a>
    <button class="clone" formaction="{{url_for("tasks-v2-rest.create_task")}}">clone task</button>
  </div>
  <div>
    <label>category</label>
    <input class="category" name="task-category" value="{{t.category if t.category}}">
  </div>
  <div>
    <label>desc</label>
    <textarea class="desc" name="task-desc">{{t.desc}}</textarea>
  </div>
  <div>
    <label>time_estimate</label>
    <input class="time_estimate" name="task-time_estimate" value="{{t.time_estimate if t.time_estimate}}">
  </div>
</div>

<div class="linkage-block">
  {{ linkage_headers }}

{% for tl in t.linkages %}
  {{ linkage_row(tl) }}
{% endfor %}

  <div class="linkage-footer-row">
    <div>
      <button class="new" disabled>add row</button>
    </div>
    <div></div>
    <div></div>
    <div style="text-align: right;">
      <button>save task</button>
    </div>
  </div>
</div>

</form>
{% endmacro %}
