function sendData(e) {
  e.preventDefault();
  f = e.target.closest('form');

  fetch(`/v2/task/${task_id}/edit`, {
    method: 'post',
    body: new FormData(f)
  })
  .then(res => res.json())
  .then(data => {
    f.querySelector("#update-task-result").innerText = JSON.stringify(data);
  })
  .catch(err => console.log(err));
}

function sendData_JSON(e) {
  e.preventDefault();
  f = e.target.closest('form');
  const task_id = f.querySelector("input[name='task_id']").value;
  const desc = f.querySelector('.desc').value;
  const category = f.querySelector('.category').value;
  const time_estimate = f.querySelector('.time_estimate').value;

  {# this really should be url_for(), but i don't wanna generate per-task_id code #}
  fetch(`/v2/task/${task_id}/edit`, {
    method: "POST",
    headers: {
      Accept: "application/json",
      "Content-Type": "application/json"
    },
    body: JSON.stringify({
      task_id: task_id,
      desc: desc,
      category: category,
      time_estimate: time_estimate,
    })
  })
  .then(res => res.json())
  .then(data => {
    f.querySelector("#update-task-result").innerText = JSON.stringify(data);
  })
  .catch(err => console.log(err));
}
{% endset %}{# task_edit_js #}



