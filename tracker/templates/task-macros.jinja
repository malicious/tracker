{% macro linkage_row(tl) %}
<div class="linkage-row">
  <div>
    <button>存</button> {# TODO: update the "formaction" field here, so it's linkage-only #}
    <button class="delete" disabled>x</button>
  </div>
  <div>
    <input name="tl-{{tl.time_scope_id}}-time_scope_id" value="{{tl.time_scope_id}}" readonly="readonly">
    <input name="tl-{{tl.time_scope_id}}-created_at" value="{{tl.created_at if tl.created_at}}" readonly="readonly">
  </div>
  <input name="tl-{{tl.time_scope_id}}-time_elapsed" placeholder="None" value="{{tl.time_elapsed if tl.time_elapsed}}">
  <input name="tl-{{tl.time_scope_id}}-resolution"   placeholder="None" value="{{tl.resolution if tl.resolution}}">
  <textarea name="tl-{{tl.time_scope_id}}-detailed_resolution" placeholder="None">{{tl.detailed_resolution if tl.detailed_resolution}}</textarea>
</div>
{% endmacro %}



