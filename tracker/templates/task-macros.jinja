{% macro edit_block(t, backlink) %}
<form action="{{url_for("tasks-v2-rest.edit_task", task_id=t.task_id)}}" method="post">
<input type="hidden" name="backlink" value="{{backlink}}">

<div class="task-edit-task-only">
  <div>
    <label>task_id</label>
    <span>{{t.task_id}}</span>
  </div>
  <div>
    <label>category</label>
    <input class="category" name="task-category" value="{{t.category if t.category}}">
  </div>
  <div>
    <label>desc</label>
    <textarea class="desc" name="task-desc">{{t.desc}}</textarea>
  </div>
  <div>
    <label>time_estimate</label>
    <input class="time_estimate" name="task-time_estimate" value="{{t.time_estimate if t.time_estimate}}">
  </div>
  <div>
    <label></label>
    {# TODO: Replace this with a <button> #}
    <input type="submit">
  </div>
</div>

<div class="linkage-block">
  {{ linkage_headers }}

{% for tl in t.linkages|reverse %}
  {{ linkage_row(tl) }}
{% endfor %}

  <div class="linkage-footer-row">
    <div></div>
    <button class="new" disabled>new</button>
  </div>
</div>

<hr />
<div id="update-task-result">[waiting for form submission]</div>

</form>
{% endmacro %}
